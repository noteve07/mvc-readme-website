@model MvcReadMe_Group4.ViewModels.LoginViewModel

@{
    Layout = "../Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: linear-gradient(135deg, #111721 0%, #1f2a3a 50%, #1a253a 100%); /* Adjusted gradient to be less blue */
        color: #c9d1d9;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    body::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle at center, rgba(53, 155, 159, 0.15) 0%, transparent 50%);
        animation: rotate 40s linear infinite;
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .login-card {
        background-color: rgba(26, 32, 41, 0.6); /* Semi-transparent background for glassmorphism */
        border-radius: 15px;
        padding: 0; /* Padding handled by inner sections */
        width: 950px; /* Increased width */
        max-width: 95%; /* Adjusted max width */
        height: 550px; /* Increased height */
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        margin: auto; /* Keep centered */
        backdrop-filter: blur(8px);
        border: 1px solid rgba(53, 155, 159, 0.3);
        position: relative;
        z-index: 1;
        overflow: hidden;
        display: flex;
        gap: 0; /* Gap handled by sections */
        align-items: stretch; /* Stretch items to fill height */
        transform: translateY(-10px); /* Move card up by 10px */
    }

    .welcome-section {
        flex: 1; /* Take up available space */
        background: linear-gradient(180deg, rgba(53, 155, 159, 0.9), rgba(91, 192, 190, 0.8), rgba(30, 50, 80, 0.8)); /* Adjusted gradient */
        padding: 60px; /* Increased padding */
        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* Align content to the top */
        align-items: flex-start; /* Align content to the left */
        color: white; /* Ensure text is readable on gradient */
    }

    .login-form-section {
        flex: 1; /* Take up available space */
        background-color: rgba(26, 32, 41, 0.9); /* Dark card background */
        padding: 60px; /* Increased padding */
        display: flex;
        flex-direction: column;
        justify-content: center; /* Center form vertically */
        align-items: center;
    }

    .welcome-section h2 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-top: 15px; /* User's manual change */
        margin-bottom: 15px;
        letter-spacing: 0.05em;
        background: none;
        -webkit-background-clip: unset;
        -webkit-text-fill-color: unset;
        background-clip: unset;
        text-fill-color: unset;
        color: #ebf3f7; /* User's manual change */
        font-family: 'Poppins', sans-serif, 'Segoe UI'; /* Modern font stack */
    }

     .welcome-section .subtitle {
        font-size: 1.1rem;
        color: #e0e6ef;
     }

    .signup-link {
        position: absolute;
        top: 20px;
        right: 20px;
        color: #359b9f;
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 600;
        transition: color 0.3s ease;
        z-index: 2;
    }

    .signup-link:hover {
        color: #5bc0be;
    }

    .login-form-section form {
        width: 100%; /* Form takes full width of its section */
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
        width: 100%;
        position: relative;
    }

    label {
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 6px;
        color: #c9d1d9;
    }

    .input-wrapper {
        position: relative;
        width: 100%;
    }

    input[type="text"],
    input[type="password"] {
        background-color: rgba(36, 48, 64, 0.7);
        border: 1px solid #195f61;
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 1rem;
        color: #fff;
        transition: all 0.3s ease;
        width: calc(100% - 32px); /* Adjust width for padding */
        outline: none;
    }

    input[type="text"]:focus,
    input[type="password"]:focus {
        background-color: rgba(43, 58, 85, 0.7);
        border-color: #359b9f;
        box-shadow: 0 0 6px 2px rgba(53, 155, 159, 0.4);
    }

    .password-toggle {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #a0a8b1;
        cursor: pointer;
        padding: 5px;
        font-size: 1.1rem;
        transition: color 0.2s ease;
    }

    .password-toggle:hover {
        color: #c9d1d9;
    }

    .validation-summary-errors {
        color: #ff6b6b;
        background-color: rgba(255, 107, 107, 0.1);
        border: 1px solid #ff6b6b;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 20px;
        width: 100%;
        font-size: 0.9rem;
    }

    .validation-summary-errors ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .validation-summary-errors li {
        margin: 5px 0;
    }

    span.text-danger {
        font-size: 0.8rem;
        color: #ff6b6b;
        margin-top: 4px;
        display: block;
        padding-left: 4px;
    }

    button[type="submit"] {
        background: linear-gradient(45deg, #359b9f, #5bc0be);
        color: white;
        font-size: 1.15rem;
        font-weight: 600;
        padding: 12px 0;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 20px; /* Adjusted margin top */
        width: 80%; /* Less wide button */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    button[type="submit"]:hover {
        background: linear-gradient(45deg, #5bc0be, #359b9f);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }

    .forgot-password {
       display: none; /* Hide the forgot password link */
    }

    .waves {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 80px;
        background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg"><path fill="%231a2029" fill-opacity="0.5" d="M0,160L40,176C80,192,160,224,240,224C320,224,400,192,480,181.3C560,171,640,181,720,197.3C800,213,880,235,960,234.7C1040,235,1120,213,1200,192C1280,171,1360,149,1400,138.7L1440,128L1440,320L1400,320C1360,320,1280,320,1200,320C1120,320,1040,320,960,320C880,320,800,320,720,320C640,320,560,320,480,320C400,320,320,320,240,320C160,320,80,320,40,320L0,320Z"></path></svg>') no-repeat center bottom;
        background-size: cover;
        opacity: 0.4;
        pointer-events: none;
    }
</style>

<div class="login-card">
    <a asp-controller="Account" asp-action="Register" class="signup-link">Signup &rarr;</a>

    <div class="welcome-section">
        <h2>Welcome to ReadMe</h2>
        <p class="subtitle">
            Unlock a growing collection of ideas, perspectives, and possibilities designed to feed your curiosity.</p> @* User's manual change *@
        @* Add any other elements for the left section here, like an image or illustration if desired *@
    </div>

    <div class="login-form-section">
         @* The form was previously inside the login-card directly, now it's inside login-form-section *@
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="UserName">Email</label>
                <div class="input-wrapper">
                    <input asp-for="UserName" autocomplete="username" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                 <div class="input-wrapper">
                    <input asp-for="Password" type="password" autocomplete="current-password" id="password-input" />
                    <button type="button" class="password-toggle" id="password-toggle">
                        <i class="fas fa-eye"></i> <!-- Requires Font Awesome -->
                    </button>
                 </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit">LOGIN</button>

            @* Removed Forgot your password link as requested *@

        </form>
    </div>

     @* The waves are positioned absolutely within the login-card, so they should adapt to the new width and height *@
     <div class="waves"></div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const passwordInput = document.getElementById('password-input');
            const passwordToggle = document.getElementById('password-toggle');
            const eyeIcon = passwordToggle.querySelector('i');

            passwordToggle.addEventListener('click', function () {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                // Toggle eye icon class (requires Font Awesome)
                if (type === 'password') {
                    eyeIcon.classList.remove('fa-eye-slash');
                    eyeIcon.classList.add('fa-eye');
                } else {
                    eyeIcon.classList.remove('fa-eye');
                    eyeIcon.classList.add('fa-eye-slash');
                }
            });
        });
    </script>
}
