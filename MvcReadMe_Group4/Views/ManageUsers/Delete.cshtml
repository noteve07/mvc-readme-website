@model MvcReadMe_Group4.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .delete-wrapper {
        margin-top: 120px;
        transform: scale(0.9);
        transform-origin: top center;
    }

    .delete-card {
        background-color: #1a2029;
        border-radius: 20px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        color: #fff;
    }

    .card-header-text {
        background-color: #8e1b1b;
        color: #fff;
        padding: 15px;
        font-size: 25px;
        font-weight: bold;
        border-bottom: 1px solid #761515;
        text-align: center;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .delete-card-content {
        padding: 40px 50px;
    }

    .dl-horizontal dt {
        font-weight: bold;
        width: 30%;
    }

    .dl-horizontal dd {
        margin-bottom: 20px;
    }

    .btn-delete {
        background-color: #a61f1f;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        border: none;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #8c1919;
        }

    .btn-secondary-custom {
        background-color: transparent;
        color: #cc7c35;
        border: none;
        font-weight: bold;
        font-size: 1.05rem;
        transition: color 0.3s ease;
    }

        .btn-secondary-custom:hover {
            color: #e67e22;
        }

    .button-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }
</style>

<div class="container delete-wrapper">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="delete-card">
                <div class="card-header-text">Delete User</div>

                <div class="delete-card-content">
                    <h4>Are you sure you want to delete this user?</h4>
                    <hr />
                    <dl class="row dl-horizontal">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Password)</dt>
                        <dd class="col-sm-8">*******</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="button-row">
                            <a asp-action="Index" class="btn-secondary-custom">Back to List</a>
                            <input type="submit" value="Delete" class="btn-delete" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
