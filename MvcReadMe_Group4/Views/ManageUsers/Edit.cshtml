@model MvcReadMe_Group4.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .edit-wrapper {
        margin-top: 120px;
        transform: scale(0.8);
        transform-origin: top center;
    }

    .edit-card {
        background-color: #1a2029;
        border-radius: 20px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        color: #fff;
    }

    .card-header-text {
        background-color: #b86721;
        color: #fdfdfd;
        padding: 15px;
        font-size: 1.8rem;
        font-weight: bold;
        border-bottom: 1px solid #ab601f;
        text-align: center;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .edit-card form {
        padding: 40px 50px;
    }

    .form-group label {
        font-weight: bold;
        margin-top: 4px;
        margin-bottom: 10px;
    }

    .form-control {
        background-color: #2c3e50;
        border: none;
        color: #fff;
        border-radius: 10px;
        padding: 10px 15px;
        margin-bottom: 5px;
    }

        .form-control:focus {
            background-color: #2c3e50;
            color: #fff;
            box-shadow: 0 0 5px #e67e22;
        }

    .btn-custom {
        background-color: #197550;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        border: none;
        font-size: 1.1rem;
        margin-left: auto;
        transition: background-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #01804d;
        }

    .btn-secondary-custom {
        background-color: transparent;
        color: #cc7c35;
        border: none;
        font-weight: bold;
        font-size: 1.05rem;
        transition: color 0.3s ease;
    }

        .btn-secondary-custom:hover {
            color: #e67e22;
        }

    .validation-summary-errors {
        color: #ff6b6b;
        margin-bottom: 15px;
    }

    .button-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }
</style>

<div class="container edit-wrapper">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="edit-card">
                <div class="card-header-text">Edit User</div>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="button-row">
                        <a asp-action="Index" class="btn-secondary-custom">Back to List</a>
                        <button type="submit" class="btn-custom">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
