@model MvcReadMe_Group4.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>

    .scale-wrapper {
        transform: scale(0.85);
        transform-origin: top center;
    }

    .form-wrapper {
        margin-top: 80px;
    }

    .form-container {
        background-color: #1a2029;
        border-radius: 0px 0px 20px 20px;
        padding: 60px 50px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    }

    .card-header-text {
        background-color: #195f61;
        color: #f0f0f0;
        text-align: center;
        padding: 20px;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 20px 20px 1px 1px;
    }

        .card-header-text h4 {
            margin: 0;
            font-size: 1.4em;
            font-weight: bold;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        background-color: #243040;
        color: #fff;
        border: 1px solid #195f61;
        border-radius: 8px;
        padding: 6px;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

        .form-control:focus {
            background-color: #2b3a55;
            color: #fff;
            border-color: #359b9f;
            box-shadow: 0 0 0 0.15rem rgba(53, 155, 159, 0.35);
        }

    .btn-create {
        background-color: #197550;
        color: white;
        font-size: 1.2rem;
        padding: 12px 40px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        margin-top: 50px;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: #01804d;
        }

    .text-center a {
        color: #359b9f;
        font-weight: bold;
    }

        .text-center a:hover {
            color: #1b6f71;
        }
</style>

<div class="scale-wrapper">
    <div class="container form-wrapper">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-header-text">
                    <h4>Create User via Admin</h4>
                </div>
                <div class="form-container">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="control-label text-white">Username</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="control-label text-white">Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn-create" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
