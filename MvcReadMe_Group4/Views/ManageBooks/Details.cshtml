@model MvcReadMe_Group4.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .details-wrapper {
        margin-top: 80px;
        transform: scale(0.9);
        transform-origin: top center;
    }

    .details-card {
        background-color: #1a2029;
        border-radius: 20px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        color: #fff;
        overflow: hidden;
        height: 65vh;
    }

    .card-header-text {
        background-color: #2b3a55;
        color: #f0f0f0;
        padding: 15px;
        font-size: 28px;
        font-weight: bold;
        border-bottom: 1px solid #212d42;
        text-align: center;
        border-radius: 0;
    }

    .details-content {
        padding: 40px;
        font-size: 22px;
        overflow-y: auto;
    }

    dt {
        font-size: 16px;
        font-weight: bold;
        margin-top: 10px;
        margin-bottom: 5px;
    }

    dd {
        font-size: 16px;
        margin-bottom: 25px;
    }

    .btn-custom {
        background-color: #c27a1d;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        border: none;
        text-decoration: none;
        margin-right: 30px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #e67e22;
            color: white;
        }

    .btn-secondary-custom {
        background-color: transparent;
        color: #359b9f;
        border: none;
        text-decoration: none;
        font-weight: bold;
        margin-right: 30px;
        font-size: 1.05rem;
        transition: color 0.3s ease;
    }

        .btn-secondary-custom:hover {
            color: #1b6f71;
        }

    .cover-panel {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px;
    }

    .book-cover {
        width: 200px;
        height: auto;
        margin-bottom: 140px;
        box-shadow: 0 15px 25px rgba(28, 25, 25, 0.6);
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .book-cover:hover {
            transform: scale(1.05);
            box-shadow: 0 25px 35px rgba(0, 0, 0, 0.7);
        }

    .card-body-custom {
        display: flex;
        height: 100%;
    }

    .details-column {
        flex: 1;
        overflow-y: auto;
        padding: 60px;
    }

    .image-column {
        width: 350px;
        background-color: #111820;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="container-fluid details-wrapper">
    <div class="row justify-content-center">
        <div class="col-xl-11 col-lg-12">
            <div class="details-card">
                <div class="card-header-text">Book Details</div>
                <div class="card-body-custom">
                    <div class="details-column">
                        <dl class="row">
                            <dt class="col-sm-4">Title</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                            <dt class="col-sm-4">Author</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

                            <dt class="col-sm-4">Category</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                            <dt class="col-sm-4">ISBN</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN)</dd>

                            <dt class="col-sm-4">File Path</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FilePath)</dd>

                            <dt class="col-sm-4">Number of Reads</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.NumberOfReads)</dd>
                        </dl>

                        <div class="mt-5">
                            <a asp-action="Index" class="btn-secondary-custom">Back to List</a>
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-custom">Edit</a>
                        </div>
                    </div>

                    <div class="image-column">
                        <img src="@Model.CoverImagePath" alt="Book Cover" class="book-cover" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
