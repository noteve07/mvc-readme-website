@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #0b0f14;
            color: #c9d1d9;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .topbar {
            width: calc(100% - 40px);
            margin: 10px 20px 0 20px;
            background-color: #1a2029;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.4rem;
            font-weight: 600;
            border-radius: 8px;
            color: white;
        }

            .topbar .brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: #ffffff;
                margin-left: 32px;
                text-align: center;
            }


        .sidebar {
            width: 270px;
            background-color: #1a2029;
            height: calc(100vh - 40px);
            position: fixed;
            margin: 10px 0 10px 20px;
            border-radius: 8px;
            padding-top: 20px;
            box-shadow: 4px 0px 10px rgba(0, 0, 0, 0.5);
        }

            .sidebar .user-info {
                text-align: center;
                margin-bottom: 20px;
            }

                .sidebar .user-info .avatar {
                    width: 80px;
                    height: 80px;
                    border-radius: 50%;
                    background-color: #2f3542;
                    margin: 0 auto 10px;
                    margin-top: 20px;
                    overflow: hidden;
                }

                    .sidebar .user-info .avatar img {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }

                .sidebar .user-info .name {
                    font-weight: bold;
                    font-size: 1.1rem;
                }

                .sidebar .user-info .status {
                    font-size: 0.9rem;
                    color: #8fbc8f;
                }

            .sidebar .nav-section {
                padding: 10px 25px;
                font-size: 0.8rem;
                color: #8b949e;
                text-transform: uppercase;
                letter-spacing: 1px;
                margin-bottom: 10px;
            }

            .sidebar a {
                display: block;
                padding: 15px 25px;
                color: #c9d1d9;
                font-size: 1rem;
                text-decoration: none;
                transition: background 0.3s ease, padding-left 0.2s ease;
                font-weight: 500;
            }

                .sidebar a.active {
                    background-color: #2b3a55;
                    padding-left: 35px;
                    font-weight: 600;
                    border-left: 4px solid #4a90e2;
                    color: #ffffff;
                }

                .sidebar a:hover {
                    background-color: #2f3d55;
                    padding-left: 35px;
                }


        .content {
            margin-left: 330px;
            padding: 30px 0px 30px 0px;
        }

        .main-container {
            background-color: #0b0f14;
            padding: 15px 30px 15px 25px;
            border-radius: 10px;
            margin-right: 30px;
            min-height: 80vh;
            max-height: 80vh;
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                margin: 0;
                border-radius: 0;
            }

            .content {
                margin-left: 0;
            }

            .topbar {
                flex-direction: column;
                align-items: flex-start;
                font-size: 1.2rem;
                padding: 10px 15px;
                margin: 0;
                border-radius: 0;
            }
        }
    </style>
</head>
<body>
    <div class="topbar">
        <div class="brand">📚 ReadMe</div>
        <div><a asp-controller="Account" asp-action="Logout" style="color: white; text-decoration: none; font-size: 18px"><i class="bi bi-box-arrow-right"></i>  Logout</a></div>
    </div>

    <div class="sidebar">
        <div class="user-info">
            <div class="avatar">
                <img src="~/assets/icon/admin-icon-1.avif" alt="Admin Avatar" />
            </div>
            <div class="name">Admin</div>
            <div class="status"><i class="bi bi-circle-fill" style="color: #28a745; font-size: 0.6rem;"></i> Online</div>
        </div>

        <div class="nav-label px-3 text-muted mt-4">MAIN NAVIGATION</div>

        <a asp-controller="Admin" asp-action="Dashboard"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>

        <a asp-controller="ManageBooks" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "ManageBooks" ? "active" : "")">
            <i class="bi bi-book"></i> Manage Books
        </a>

        <a asp-controller="ManageUsers" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "ManageUsers" ? "active" : "")">
            <i class="bi bi-people"></i> Manage Users
        </a>

        <a asp-controller="Admin" asp-action="Developers"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Developers" ? "active" : "")">
            <i class="bi bi-code-slash"></i> Developers
        </a>

        <a asp-controller="Admin" asp-action="About"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")">
            <i class="bi bi-info-circle"></i> About
        </a>
    </div>

    <div class="content">
        <div class="main-container">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
