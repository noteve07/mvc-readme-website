@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReadMe</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #0a0f1a;
            color: #c9d1d9;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .topbar {
            width: calc(100% - 40px);
            margin: 10px 20px 0 20px;
            background-color: #16202e;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.4rem;
            font-weight: 600;
            border-radius: 8px;
            color: white;
        }

            .topbar .brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: #ffffff;
                margin-left: 32px;
                text-align: center;
            }

        .content {
            padding: 30px 30px;
        }

        .main-container {
            background-color: #0a0f1a;
            padding: 15px 30px;
            border-radius: 10px;
            min-height: 80vh;
        }

        @@media (max-width: 768px) {
            .topbar {
                flex-direction: column;
                align-items: flex-start;
                font-size: 1.2rem;
                padding: 10px 15px;
                margin: 0;
                border-radius: 0;
            }
        }
    </style>
</head>
<body>
    <div class="topbar">
        <div class="brand">
            <a href="/User/Home" style="color: white; text-decoration: none;">
                <i class="fas fa-book" style="color: #4a90e2;"></i>&nbsp;&nbsp;ReadMe
            </a>
        </div>
        <div>
            <a asp-controller="Account" asp-action="Logout" style="color: #c9d1d9; text-decoration: none; font-size: 18px">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>

    <div class="content">
        <div class="main-container">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
